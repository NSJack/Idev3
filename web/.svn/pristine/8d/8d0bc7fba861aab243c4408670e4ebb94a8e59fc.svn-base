.header_top .navbar {
    min-height: 30px;
    margin-bottom: 0;
}

.header_top .navbar .navbar-default {
    margin: 0;
}

.header_top .navbar .container-fluid,
.header_top .navbar .container-fluid .navbar-collapse {
    padding-left: 0;
    padding-right: 0;
}

.header_top .navbar-nav > li > a {
    padding-top: 0;
    padding-bottom: 0;
    font-size: 12px;
    line-height: 30px;
}

.header_top .navbar-nav > li > a:hover {
    color: #ed145b;
}

.header_center {
    height: 110px;
}

.header_center .logo {
    float: left;
    line-height: 100px;
}

.header_searchbox {
    float: left;
    position: relative;
    z-index: 8;
    height: 82px;
    padding-top: 28px;
}

.header_searchbox .header_search_input {
    height: 38px;
    width: 420px;
    margin-left: 124px;
    padding: 7px 5px;
    border: solid #ed145b;
    border-width: 3px 0 3px 3px;
    float: left;
    font-size: 12px;
}

.header_searchbox .header_search_btn {
    width: 100px;
    height: 38px;
    border: 0 none;
    color: #fff;
    font-size: 14px;
    line-height: 38px;
    float: left;
    background: #ed145b;
    cursor: pointer;
    padding: 0;
}

.header_searchbox .hot_word {
    overflow: hidden;
    height: 18px;
    line-height: 18px;
    margin-top: 6px;
    margin-left: 86px;
    float: left;
    width: auto;
}

ol, ul {
    list-style: none;
}

.header_searchbox .hot_word li {
    float: left;
    margin-right: 8px;
}

.header_searchbox .hot_word a {
    color: #999;
    text-decoration: none;
}

.header_searchbox .hot_word a:hover {
    color: #ed145b;
}

.header_searchbox .hot_word .line {
    overflow: hidden;
    width: 1px;
    height: 12px;
    display: inline-block;
    background: #999;
    margin: 2px 0 -2px 8px;
    padding: 0;
}

.header_center .cart_box {
    float: left;
    margin-top: 33px;
    margin-left: 120px;
    position: relative;
}

.cart_box .cart_link {
    -webkit-backface-visibility: hidden;
    text-decoration: none;
    display: block;
    width: 138px;
    height: 32px;
    line-height: 32px;
    border: 1px solid #e5e5e5;
    position: relative;
    background: #fff;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
}

.cart_box .text {
    width: 86px;
    height: 32px;
    line-height: 32px;
    color: #666;
    overflow: hidden;
    padding-left: 6px;
    background: #f8f8f8;
}

.header_bottom {
    height: 40px;
}

.footer {
    overflow: hidden;
    border-top: 1px solid #ccc;
    background: #fff;
    position: relative;
    bottom: -1px;
    height: 738px;
}

.footer_credit {
    padding: 30px 0 15px 0;
    border-bottom: 1px solid #ccc;
}

.footer_credit .mostmall {
    width: 130px;
}

.footer_credit .foot_link {
    width: 170px;
    height: 140px;
    color: #999;
    font-size: 14px;
    display: block;
    float: left;
    line-height: 18px;
    overflow: hidden;
    text-align: center;
}

.footer_con {
    width: 1090px;
    margin: 0 auto;
    overflow: hidden;
}

.footer_credit a.foot_link .con {
    color: #333;
    font-size: 16px;
    height: 24px;
    line-height: 24px;
    overflow: hidden;
    display: block;
    cursor: pointer;
}

.footer_dy {
    height: 95px;
    background: url(/themes/img/footer_dy.jpg) center top no-repeat;
}

.footer_center {
    height: 48px;
    line-height: 48px;
    overflow: hidden;
    font-size: 12px;
    color: #fff;
    background: url(/themes/img/footer_btm02_bg.jpg) center top repeat-x;
}

.footer_con {
    width: 1090px;
    margin: 0 auto;
    overflow: hidden;
}

.footer_center a {
    color: #fff;
    padding-right: 12px;
    height: 48px;
    display: inline-block;
    text-decoration: none;
}

.footer_copyright {
    background: url(/themes/img/newindex_footer_bg.png) #404040 center top repeat-x;
    line-height: 20px;
    padding-bottom: 80px;
    color: #ccc;
}

.footer_copyright .footer_copy_con {
    padding: 14px 0 18px;
    line-height: 23px;
}

.footer_copyright a {
    color: #ccc;
    text-decoration: none;
}


<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6" style='height: 270px;'>
	<div class="panel panel-success">
	<div class="panel-heading text-center font-weight" style="font-size:20px;"><b>用户注册中心</b></div>
		<div class="panel-body">
			<form action="/?m=liulin&c=login&f=register_zcsave" method="post">
				<table style="height: 100%;margin: 10px auto;">
					<tr>
						<td class="text-right" style="height: 50px;">用户名：</td>
						<td class="text-center">
							<input type="text" class="form-control" name="username" placeholder="请输入账号">
						</td>
						<td class="text-left"></td>
					</tr>
					<tr>
						<td class="text-right" style="height: 50px;">设置密码：</td>
						<td class="text-center">
							<input type="password" class="form-control" name="password1" placeholder="请输入密码">
						</td>
					</tr>
		            <tr>
						<td class="text-right" style="height: 50px;">确认密码：</td>
						<td class="text-center">
							<input type="password" class="form-control" name="password2" placeholder="请再次输入密码">
						</td>
					</tr>
					<tr>
						<td class="text-right" style="height: 50px;">手机号：</td>
						<td class="text-center">
							<input type="text" class="form-control" name="phone" placeholder="请输入手机号码">
						</td>
					</tr>
					<tr>
						<td class="text-right" style="height: 50px;">验证码：</td>
						<td class="text-center">
							<input type="text" class="form-control" name="phone" placeholder="请输入短信验证码">
						</td>
						<td class="text-center" style="height: 70px;">
							<button type="button" class="button button-btn-default" name="send">
								<a href='?m=liulin&c=login&f=SMS' >发送验证码</a>
							</button>             
						</td>
					</tr>
					<tr>
						<td>&nbsp;</td>
						<td class="text-center" style="height: 70px;">
							<button type="submit" class="btn btn-default">注册</button>
		                    <a href='?m=liulin&c=login&f=register' class="btn btn-default">登录</a>
						</td>
						<td>&nbsp;</td>
					</tr>
				</table>
			</form>
		</div>
	</div>
<div class="col-md-3" style='border:0px solid #ccc;height: 10px;'></div>
</div>
</div>

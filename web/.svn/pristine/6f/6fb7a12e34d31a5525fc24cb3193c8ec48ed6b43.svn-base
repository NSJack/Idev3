<?php
/**
 * 注册登录页面
 */
namespace module\liulin;

class Login extends \core\Controller{
    
    function index(){
        
    }
    //用户登录页面
    function register(){
        $data = array();
        
        $this->fw('/liulin/regist', $data);
    }
    //后台验证流程
    function register_save(){
        //获取用户名和密码
        $username = $this->input()->post('username');
        $password = $this->input()->post('password');
        //var_dump($password);exit;
        if ( empty($username) ) { 
            die('用户名不能为空');
        }
        if ( empty($password) ) { 
            die('密码不能为空');
            //echo "密码不能为空";
        }
        $sql = "SELECT * FROM login_ll where username = '{$username}'";
        $row = $this->model()->get($sql);
        //给密码加密，单向散列算法，hash随机加盐
        $hash = password_hash($password, PASSWORD_DEFAULT);
        if (password_verify($password,$hash)) {
         
            echo "密码正确";
        } else {  
            die('密码错误');
        }
        $sql = "SELECT * FROM login_ll where username = '{$username}'";
        $rows = $this->model()->get($sql);
        //判断用户输入的信息和数据库内的是否一致
        if ( $rows == true ) {
            //登录成功，按道理来说应该写入一个session，但是没想好该怎么写
            echo "登录成功";
            $this->output()->redirect('/?m=liulin&c=Lindex&f=index');
        }else{
            echo "用户名或密码错误";
        }
    }
}

<!---登陆页面----->
<style>
    .vick_row
    {
        margin:5% auto;
        min-height: 300px;
    }
    .btn-success
    {
        margin-left: 5%;
    }
</style>

<div class="row vick_row">
    
    <form class="form-horizontal" role="form" action="?m=user&c=login&f=save" method="post">
        <div class="col-sm-offset-7"><h4><a href="?m=user&c=register">前往注册</a><h4></div>
        <div class="form-group">
            <label for="name" class="col-sm-offset-2 col-sm-2 control-label" >姓名</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="name" name="name"  placeholder="请输入姓名">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-offset-2 col-sm-2 control-label">密码</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="password" name="password"   placeholder="请输入密码" >
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="checkbox">
                    <!--<label>
                        <input type="radio" value="radio" name="radio"> 请记住我
                    </label>-->
                </div>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-sm-offset-6 col-sm-2 text-right">
                <button type="submit" class="btn btn-success">登录</button>
                <button type="reset" class="btn btn-info">重置</button>
            </div>
        </div>
    </form>
</div>   
namespace module\wsw;

class User extends \core\Controller
{
    function index()
    {
        $data = array();
        
        //查询语句
        $sql = "SELECT * FROM wsw_user";
        $rows = $this->model()->gets($sql);
        
        //保存在$rows里面
        $data['rows'] = $rows;
        $this->fw("/wsw/user",$data);
    }
    
    function del()
    {
        $id = $this->input()->get('id');
         
        if($id > 0)
        {
            $sql = "DELETE FROM `wsw_user` WHERE (`id`='{$id}') LIMIT 1";
           
            $row = $this->model()->delete($sql);
            if($row == true)
            {
                header("Location:http://ldev2.sodevel.com/?m=wsw&c=User&f=index#profile");
            }
           // exit("成功");
        }
    }
    
